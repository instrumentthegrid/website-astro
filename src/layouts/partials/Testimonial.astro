---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";

const testimonial = (await getEntry(
  "testimonialSection",
  "testimonial"
)) as CollectionEntry<"testimonialSection">;
const { description, title, enable, testimonials } = testimonial.data;
---

{
  enable && (
    <section class="section bg-theme-light dark:bg-darkmode-theme-light">
      <div class="container">
        <div class="lg:col-6 mx-auto text-center mb-8 lg:mb-16">
          <h2 class="mb-5" set:html={markdownify(title)} />
          <p set:html={markdownify(description)} />
        </div>

        <div class="sm:col-10 mx-auto">
          <div class="swiper testimonial-slider">
            <div class="swiper-wrapper">
              {testimonials.map((testimonial) => (
                <div class="swiper-slide text-center">
                  <p
                    class="h5 text-dark dark:text-darkmode-dark"
                    set:html={markdownify(testimonial.content!)}
                  />
                  <Image
                    class="inline-block rounded-full mt-12"
                    src={testimonial.avatar}
                    width={80}
                    height={80}
                    alt={testimonial.name}
                  />
                  <h4
                    class="mt-3 font-bold"
                    set:html={markdownify(testimonial.name)}
                  />
                  <p
                    class="mt-1"
                    set:html={markdownify(testimonial.designation)}
                  />
                </div>
              ))}
            </div>
            <div class="pagination mt-8 lg:mt-16" />
          </div>
        </div>
      </div>
    </section>
  )
}

<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import { Pagination } from "swiper/modules";

  // astro:page-load event is fired when the page is loaded
  document.addEventListener("astro:page-load", () => {
    new Swiper(".testimonial-slider", {
      modules: [Pagination],
      spaceBetween: 52,
      loop: true,
      // loopedSlides: 2,
      slidesPerView: 1,
      pagination: {
        el: ".pagination",
        clickable: true,
        bulletActiveClass: "active",
      },
      breakpoints: {
        991: {
          slidesPerView: 2,
        },
      },
    });
  });
</script>
